    "version": "0.2.0",
    "configurations": [
        {
            "name": "test",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            //"program": "${file}",
            "args": ["${file}"],
            "cwd": "${workspaceRoot}",
            "skipFiles": [
                "node_modules/**/*.js"
            ],
            "sourceMaps": true,
            "stopOnEntry": true,
            "smartStep": false,
            "console": "internalConsole"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "port": 5858
        }
    ],
    "compounds": [
        {
            "name": "Test-Client",
            "configurations": ["Test"]
        }
    ]
}